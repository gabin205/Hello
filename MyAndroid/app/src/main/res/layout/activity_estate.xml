<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sfsuse.fa17g16.myandroid.EstateActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TableRow>
            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/button8"
                app:srcCompat="@drawable/logo" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button3"
                android:layout_alignBottom="@+id/button3"
                android:layout_toEndOf="@+id/imageButton2"
                android:layout_toRightOf="@+id/imageButton2"
                android:onClick="goToDashboard"
                android:text="@string/Home" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button8"
                android:layout_alignBottom="@+id/button8"
                android:layout_centerHorizontal="true"
                android:text="@string/Agencies" />

            <Button
                android:id="@+id/button3"
                style="@android:style/Widget.Button"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/button9"
                android:layout_toRightOf="@+id/button9"
                android:onClick="goToLogin"
                android:text="@string/myhomepage"
                tools:ignore="RelativeOverlap" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Real Estate : "
        tools:textSize="30sp"/>
        <TextView
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="15pt"
            android:layout_weight="1"
            android:visibility="visible"/>
        </TableRow>
    </TableLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_gravity="top|center">
        <LinearLayout
            android:id="@+id/imageliste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>
    <TableLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="Size:"
                android:layout_width="0dp"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/size"
                android:layout_width="0dp"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:visibility="visible"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:text="@string/room"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/rooms"
                android:layout_width="0dp"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:visibility="visible"/>
            <TextView
                android:text="Cost:"
                android:layout_width="0dp"
                android:layout_height="15pt"
                android:layout_weight="1"

                android:visibility="visible"/>
            <TextView
                android:id="@+id/cost"
                android:layout_width="0dp"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:visibility="visible"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/zipcode"
                android:layout_width="0dp"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/street"
                android:layout_width="0dp"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:visibility="visible"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:text="description:"
                android:visibility="visible"/>
    </TableRow>

        <TableRow>
            <TextView
            android:id="@+id/s_first_name"
            android:layout_width="0dp"
            android:layout_height="15pt"
                tools:textSize="24sp"
            android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
            android:visibility="visible"/>
            <TextView
                android:id="@+id/s_last_name"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_height="15pt"
                tools:textSize="24sp"
                android:layout_weight="1"
                android:visibility="visible"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/s_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/colorPrimaryDark"
                tools:textSize="24sp"
                android:visibility="visible"/>
            <Button
                android:id="@+id/btn_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contact"
                tools:textSize="24sp"/>
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <ListView
        android:id="@+id/v_equipment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    </TableLayout>
</LinearLayout>
